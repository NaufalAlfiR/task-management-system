{
  "version": 2,
  "builds": [
    { "src": "production-server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/health", "dest": "production-server.js" },
    { "src": "/metrics", "dest": "production-server.js" },
    { "src": "/src/(.*)", "dest": "/src/$1" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}
